{
    "name": "Java 21 + Oracle DB",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "redhat.vscode-xml",
                "vmware.vscode-boot-dev-pack",
                "vscjava.vscode-maven"
            ],
            "settings": {
                "java.jdt.ls.java.home": "/usr/java/openjdk-21",
                "maven.executable.path": "/usr/share/maven/bin/mvn",
                "java.configuration.updateBuildConfiguration": "automatic"
            }
        }
    },
    
    "forwardPorts": [1521],
    "postCreateCommand": "mvn install -DskipTests && .devcontainer/setup-git-config.sh",
    "remoteUser": "vscode",

    // Use VS Code's built-in variables for Git configuration
    "containerEnv": {
        "GIT_AUTHOR_NAME": "${localEnv:GITHUB_USER}",
        "GIT_AUTHOR_EMAIL": "${localEnv:GITHUB_EMAIL}",
        "GIT_COMMITTER_NAME": "${localEnv:GITHUB_USER}",
        "GIT_COMMITTER_EMAIL": "${localEnv:GITHUB_EMAIL}"
    },

    // Initialize git configuration from host
    "initializeCommand": {
        "windows": "git config --global --get user.name > .devcontainer/git_name.txt && git config --global --get user.email > .devcontainer/git_email.txt",
        "linux": "git config --global --get user.name > .devcontainer/git_name.txt && git config --global --get user.email > .devcontainer/git_email.txt",
        "osx": "git config --global --get user.name > .devcontainer/git_name.txt && git config --global --get user.email > .devcontainer/git_email.txt"
    },

    // Copy Git credentials and config from host
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.git-credentials,target=/home/vscode/.git-credentials,type=bind,consistency=cached,ro"
    ]
} 